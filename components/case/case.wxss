/* pages/video/video.wxss */
@import "../../pages/index/index.wxss";
@import "../../style/updateBooks.wxss";


/* 显示视频div的头部 */
.specialImgDiv {
  height: 55rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 30rpx;
  margin-bottom: 28rpx;
}

.specialImgDiv>.title {
  width: 70%;
  position: relative;
  margin-left: -10rpx;
}

.specialImgDiv>.title>.titleText {
  position: absolute;
  left: 25rpx;
  top: 24rpx;
  color: #fff;
}

.specialImgDiv>.more {
  color: #d60000;
}


.specialContainer {
  width: 94%;
  margin: 0 auto;
  background: #fff;
  border-radius: 25rpx;
  padding-top: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0px 0px 30px 1px #ccc;
  margin-top: -50rpx;
  position: relative;
  margin-top: -50rpx;
}

/* 标题和主讲人 */
.title,
.titleBottom {
  /* width: 100%; */
  width: 300rpx;
  text-align: center;
}

.title {
  font-size: 13px;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.titleBottom {
  font-size: 12px;
  color: #9d9d9d;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.titleCon {
  color: #eb4d28;
  border: 1px solid #eb4d28;
  border-radius: 8rpx;
  padding-left: 4rpx;
  padding-right: 4rpx;
  display: inline-block;
  font-size: 20rpx;
  background: #ffefef;
}

/*搜索框*/
.pmed-qa-search-input {
  height: 68rpx;
  border-radius: 34rpx;
  background: #F4F6F8;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 34rpx;
}

.pmed-qa-search-input>input {
  flex-grow: 1;
}

.pmed-qa-search-input>image {
  margin-left: 10rpx;
  width: 34rpx;
  height: 34rpx;
}

.pmed-qa-search-form {
  padding: 0 38rpx 40rpx;
}

.pemd-qa-search-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pmed-qa-search-filter-trigger {
  display: flex;
  align-items: center;
}

.pmed-qa-search-filter-trigger>image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.pmed-qa-search-filter-trigger>text {
  font-size: 24rpx;
  color: #4A4A4A;
}

.pemd-qa-search-toolbar {
  margin: 0 22rpx;
  border-bottom: 1px solid #E8EBEF;
}

/*问答列表*/
.pmed-qa-item {
  padding-bottom: 8px;
}

.pmed-qa-item-title>image,
.pmed-qa-item-answer>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
  flex-shrink: 0;
}

.pmed-qa-item-title em {
  color: rgba(203, 12, 12, 1);
  font-style: normal;
}

.pmed-qa-item-title,
.pmed-qa-item-answer {
  display: flex;
  flex-direction: row;
}

.pmed-qa-item-title>text {
  font-size: 28rpx;
  color: #000000;
  line-height: 40rpx;
}

.pmed-qa-item-answer>text {
  font-size: 28rpx;
  color: rgba(122, 122, 122, 1);
  line-height: 40rpx;
}

.pmed-qa-item-answer {
  margin-top: 20rpx;
}

.pmed-search-list-body {
  padding: 0 32rpx;
}

.pmed-search-list-item {
  border-bottom: 1px solid #E8EBEF;
  padding: 18rpx 0;
}

/*筛选弹窗*/
.pmed-search-popup-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 120rpx;
  z-index: 10;
  background: rgba(0, 0, 0, 0.43);
}

.pmed-search-popup {
  position: absolute;
  right: 0;
  top: 0;
  width: 628rpx;
  background: #FFFFFF;
}

.pmed-search-filters {
  padding: 34rpx;
}

.pmed-search-filter {
  margin-bottom: 20rpx;
}

.pmed-search-filter-label {
  font-size: 28rpx;
  color: #030303;
  margin-bottom: 10rpx;
}

.pmed-search-buttons {
  display: flex;
}

.pmed-search-button {
  text-align: center;
  line-height: 88rpx;
  background: #F4F6F8;
  font-size: 28rpx;
  color: #4F515D;
  flex-grow: 1;
}

.pmed-search-button-primary {
  text-align: center;
  line-height: 88rpx;
  background: #F83C37;
  font-size: 28rpx;
  color: #FFFFFF;
  flex-grow: 1;
}

.pmed-case-title {
  font-size: 28rpx;
  color: #4A4A4A;
  margin-bottom: 20rpx;
}

.pmed-case-image {
  width: 172rpx;
  height: 108rpx;
  flex-shrink: 0;
}

.pmed-case-style1 {
  display: flex;
}

.pmed-case-style1>.pmed-case-image {
  margin-right: 18rpx;
}

.pmed-case-summary {
  font-size: 24rpx;
  color: #545454;
}

.pmed-case-images {
  display: flex;
}

.pmed-case-images>.pmed-case-image {
  margin-right: 20rpx;
}

.pmed-case-source {
  font-size: 24rpx;
  color: #545454;
  text-align: right;
}

.pmed-case-summary+.pmed-case-source {
  margin-top: 8rpx;
}

.pmed-case-url {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.pmed-case-url>image {
  width: 20rpx;
  height: 22rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.pmed-case-url>text {
  font-size: 22rpx;
  color: #9B9B9B;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pmed-case-source-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.red {
  color: rgba(203, 12, 12, 1);
  font-style: normal;
}
.pmed-search-list-tips{
  text-align: center;
  padding: 20rpx 0;
}