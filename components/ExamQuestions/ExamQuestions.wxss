.pemd-qa-search-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pmed-qa-search-filter-trigger {
  display: flex;
  align-items: center;
}

.pmed-qa-search-filter-trigger>image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.pmed-qa-search-filter-trigger>text {
  font-size: 24rpx;
  color: #4A4A4A;
}

.pemd-qa-search-toolbar {
  margin: 0 22rpx;
  border-bottom: 1px solid #E8EBEF;
}

.pmed-exam-question-title{
  font-size:28rpx;
  color: #4A4A4A;
}
.red{
  color:rgba(203,12,12,1);
  font-style: normal;
}
.link{
  color:blue;
  text-decoration: underline;
}
.pmed-exam-question-answers{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.pmed-exam-question-answer{
  width: 96%;
  font-size:24rpx;
  color: #545454;
  margin-right: 10px;
  display: flex;
  flex-direction: row;
}
.pmed-exam-question-analysis{
  margin-top: 20rpx;
}
.pmed-exam-question-analysis-item{
  margin-top: 8rpx;
}
.pmed-exam-question-analysis-item>label{
  font-size:24rpx;
  color: #545454;
}
.pmed-exam-question-analysis-item>text,.pmed-exam-question-analysis-item>rich-text{
  font-size:24rpx;
  color: #545454;
}
.pmed-exam-question-analysis-item>text.pmed-exam-question-analysis-item-highlighted{
  color:#CB0C0C;
}
.pmed-exam-question-tail{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-top: 8rpx;
}
.pmed-exam-question-source{
  font-size:24rpx;
  color: #545454;
  margin-top: 8rpx;
}
.pmed-exam-question-menu{
  flex-shrink: 0;
}
.pmed-exam-question-menu>text{
  font-size:24rpx;
  color: #F83C37;
}
.pmed-exam-question-menu>text+text{
  margin-left: 20rpx;
}
/*筛选弹窗*/
.pmed-search-popup-mask{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 120rpx;
  z-index: 10;
  background: rgba(0,0,0,0.43);
}
.pmed-search-popup {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 628rpx;
  max-height: 95%;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.pmed-search-popup-header{
  flex-shrink: 0;
}
.pmed-search-popup-body{
  flex-shrink: 1;
  overflow: auto;
}
.pmed-search-popup-footer{
  flex-shrink: 0;
}

.pmed-search-filters {
  padding: 12rpx 28rpx;
}

.pmed-search-filter {
  margin-bottom: 20rpx;
}

.pmed-search-filter-label {
  font-size: 28rpx;
  color: #030303;
  margin-bottom: 10rpx;
}

.pmed-search-buttons {
  display: flex;
}

.pmed-search-button {
  text-align: center;
  line-height: 88rpx;
  background: #F4F6F8;
  font-size: 28rpx;
  color: #4F515D;
  flex-grow: 1;
}

.pmed-search-button-primary {
  text-align: center;
  line-height: 88rpx;
  background: #F83C37;
  font-size: 28rpx;
  color: #FFFFFF;
  flex-grow: 1;
}

.pmed-search-list-body{
  padding: 0 32rpx;
}
.pmed-search-list-item{
  padding: 20rpx 0;
  margin: 0 auto;
  border-bottom: 2rpx solid #E8EBEF;
}
.pmed-search-list-tips{
  text-align: center;
  padding: 20rpx 0;
}
.category-select{
  flex-direction: column;
  padding: 0 54rpx;
}
.category-select-tag{
  border: 2rpx solid #C8D4E2;
  border-radius: 34rpx;
  margin-bottom: 12rpx !important;
  text-align: center;
  line-height: 56rpx !important;
}
.pmed-search-popup-title{
  font-size: 32rpx;
  color: #030303;
  text-align: center;
  padding: 26rpx 0 20rpx;
}
.pmed-icon-button{
  display: flex;
  align-items: center;
}
.pmed-icon-button>image{
  width: 30rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.pmed-icon-button>text{
  font-size: 24rpx;
  color: #F83C37;
}